generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

/* ===================== ENUMS ===================== */

enum Role {
  USER
  ADMIN
  SUPER_ADMIN
}

enum PaymentStatus {
  PENDING
  VERIFIED
  REJECTED
}

enum NotificationType {
  PAYMENT
  CLASS
  SYSTEM
}

enum BatchStatus {
  UPCOMING
  ACTIVE
  CLOSED
}

enum Blockchain {
  BTC
  ETH
  BSC
  SOL
  TRON
  ARBITRUM
}

/* ===================== USER ===================== */

model User {
  id              String   @id @default(uuid())
  name            String
  email           String   @unique
  passwordHash    String
  isEmailVerified Boolean  @default(false)
  createdAt       DateTime @default(now())

  profile         Profile?
  wallets         CryptoWallet[]
  roles           UserRole[]
  sessions        Session[]
  enrollments     Enrollment[]
  payments        Payment[]
  notifications   Notification[]
  verification    EmailVerificationCode?

  @@index([createdAt])
}

model Profile {
  id        String   @id @default(uuid())
  userId    String   @unique
  phone     String?  @unique
  avatarUrl String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}


/* ===================== AUTH ===================== */

model Session {
  id        String   @id @default(uuid())
  userId    String
  token     String   @unique
  expiresAt DateTime

  user User @relation(fields: [userId], references: [id])
}

model EmailVerificationCode {
  id         String   @id @default(uuid())
  userId     String   @unique
  code       String
  expiresAt DateTime
  used       Boolean  @default(false)

  user User @relation(fields: [userId], references: [id])

  @@index([userId])
}


model UserRole {
  id     String @id @default(uuid())
  userId String
  role   Role

  user User @relation(fields: [userId], references: [id])

  @@unique([userId, role])
}

/* ===================== WALLETS ===================== */

model CryptoWallet {
  id          String      @id @default(uuid())
  userId      String
  chain       Blockchain
  address     String
  label       String?
  networkTag  String?     // TRON memo, XRP tag, etc
  isVerified  Boolean     @default(false)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([chain, address])
  @@index([userId])
  @@index([userId, chain])
}

/* ===================== COURSE ===================== */

model Course {
  id              String   @id @default(uuid())
  title           String
  slug            String   @unique
  description     String   // Rich HTML (sanitized)
  descriptionType String   @default("html")
  price           Int
  thumbnail       String
  isActive        Boolean  @default(true)
  createdAt       DateTime @default(now())
  updatedAt   DateTime          @updatedAt

  batches Batch[]
  courseTags      CourseTag[]

  @@index([isActive])
}

model Tag {
  id        String      @id @default(uuid())
  name      String      @unique
  courseTags CourseTag[]
}

model CourseTag {
  courseId String
  tagId    String

  course   Course @relation(fields: [courseId], references: [id])
  tag      Tag    @relation(fields: [tagId], references: [id])

  @@id([courseId, tagId])
  @@index([tagId])
}

/* ===================== BATCH ===================== */

model Batch {
  id              String      @id @default(uuid())
  courseId        String
  name            String
  enrollmentOpen  DateTime
  enrollmentClose DateTime
  status          BatchStatus
  createdAt       DateTime    @default(now())
  updatedAt   DateTime          @updatedAt

  course      Course      @relation(fields: [courseId], references: [id])
  classes     Class[]
  enrollments Enrollment[]
  payments    Payment[]

  @@index([courseId, status])
}

/* ===================== CLASS ===================== */

model Class {
  id          String   @id @default(uuid())
  batchId     String
  title       String
  date        DateTime
  startTime   String
  endTime     String
  meetingLink String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime          @updatedAt

  batch Batch @relation(fields: [batchId], references: [id])

  @@index([batchId, date])
}

/* ===================== ENROLLMENT ===================== */

model Enrollment {
  id        String   @id @default(uuid())
  userId    String
  batchId   String
  createdAt DateTime @default(now())
  updatedAt   DateTime          @updatedAt

  user  User  @relation(fields: [userId], references: [id])
  batch Batch @relation(fields: [batchId], references: [id])

  @@unique([userId, batchId])
}

/* ===================== PAYMENT ===================== */

model Payment {
  id            String        @id @default(uuid())
  userId        String
  batchId       String
  senderNumber  String
  transactionId String
  method        String
  amount        Int
  status        PaymentStatus @default(PENDING)
  createdAt     DateTime      @default(now())
  updatedAt   DateTime          @updatedAt

  user  User  @relation(fields: [userId], references: [id])
  batch Batch @relation(fields: [batchId], references: [id])

  @@unique([transactionId])
  @@index([status])
}

/* ===================== NOTIFICATION ===================== */

model Notification {
  id          String            @id @default(uuid())
  userId      String?
  type        NotificationType
  title       String
  message     String
  data        Json?
  isRead      Boolean           @default(false)
  dedupeKey   String?
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt

  user User? @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, isRead])
  @@unique([userId, dedupeKey])
}


